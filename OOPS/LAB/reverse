import java.util.*;
class reverse
{
    public static void main(String args[])
    {	
      String a, b="";
    	System.out.print("ENTER STRING : ");
    	Scanner s= new Scanner(System.in);
    	a=s.nextLine();
    	int len=a.length();
    	for(int i=len-1;i>=0;i--)
	    {
    		b=b+a.charAt(i);			
	    } 
	    System.out.print("REVERSED STRING : "+b);	
	    s.close();
	
    }
}
